<%= render "shared/second-header" %>

<div class="movies-sell-contents">
  <div class="movies-sell-main">
    <h2 class="movies-sell-title">作品の情報を編集</h2>
    <%= form_with model: [:admin, @movie], url: admin_movie_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 作品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        作品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"movie-image" %>
      </div>
    </div>
    <%# /作品画像 %>
    <%# 映画タイトルと概要 %>
    <div class="new-items">
      <div class="weight-bold-text">
        映画タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"new-movie-title", id:"new-movie-title", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          概要
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :summary, class:"new-movie-summary", id:"new-movie-summary",rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /映画タイトルと概要 %>

    <%# 映画の詳細 %>
    <div class="items-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <%# /映画の詳細 %>

    <%# 下部ボタン %>
    <div class="new-movie-submit-contents">
      <div><%= f.submit "編集する" ,class:"new-movie-submit" %></div>
      <%= link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="movies-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">Review Diary利用規約</a></li>
      <li><a href="#">お問い合わせ</a></li>
    </ul>
  
    <p class="inc">
      ©︎ReviewDiary,Inc.
    </p>
  </footer>
</div>