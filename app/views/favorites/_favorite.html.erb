<% if user_signed_in? %>
 <% if current_user.favorited_by?(review.id) %>
   <td><%= link_to 'いいねを外す', review_favorite_path(review), method: :DELETE, remote: true %> <%= review.favorites.count %></td>
 <% else %>
   <td><%= link_to 'いいね', review_favorites_path(review), method: :POST, remote: true %> <%= review.favorites.count %></td>
 <% end %>
<% end %>