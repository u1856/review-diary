<% if review.favorited_by?(current_user) %>
  <%= link_to review_favorite_path(review), remote: true, method: :DELETE do %>
   <i class="far fa-heart favorite-btn" aria-hidden="true" style="color: red;"></i>
    <%= review.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to review_favorites_path(review), remote: true, method: :POST do %>
  <i class="fas fa-heart unfavorite-btn" aria-hidden="true"></i>
  <%= review.favorites.count %>いいね
  <% end %>
<% end %>